{
  "_metadata": {
      "major_version": 1,
      "minor_version": 1
  },
  "display_information": {
      "name": "Jungle Scout AI Assistant",
      "description": "AI-powered Amazon seller intelligence and product research assistant. Get real-time market insights, competitor analysis, and sales forecasting.",
      "background_color": "#2A7F3E",
      "long_description": "Jungle Scout AI Assistant brings powerful Amazon seller analytics directly to Slack. Features include:\n\nüîç Product Research - Discover profitable opportunities with AI-driven analysis\nüìä Sales Analytics - Track performance metrics and revenue trends\nüéØ Keyword Analysis - Optimize listings with search volume data\nüî¨ Competitor Intelligence - Deep ASIN analysis and market positioning\nüìà Market Trends - Identify emerging opportunities\n‚úÖ Product Validation - AI-powered opportunity scoring\n\nAll powered by real-time Jungle Scout data and advanced AI analysis."
  },
  "features": {
      "app_home": {
          "home_tab_enabled": true,
          "messages_tab_enabled": false,
          "messages_tab_read_only_enabled": true
      },
      "bot_user": {
          "display_name": "Jungle Scout AI",
          "always_online": true
      },
      "shortcuts": [
          {
              "name": "Run sample shortcut",
              "type": "global",
              "callback_id": "sample_shortcut_id",
              "description": "Runs a sample shortcut"
          }
      ],
      "slash_commands": [
          {
              "command": "/sample-command",
              "description": "Runs a sample command",
              "should_escape": false
          },
          {
              "command": "/research",
              "description": "Research product opportunities",
              "usage_hint": "[keyword/ASIN] - e.g., 'wireless earbuds', 'B08N5WRWNW'",
              "should_escape": false
          },
          {
              "command": "/keywords",
              "description": "Analyze keyword opportunities",
              "usage_hint": "[keyword] - e.g., 'bluetooth speakers'",
              "should_escape": false
          },
          {
              "command": "/competitor",
              "description": "Analyze competitor products",
              "usage_hint": "[ASIN] - e.g., 'B08N5WRWNW'",
              "should_escape": false
          },
          {
              "command": "/sales",
              "description": "Track sales performance",
              "usage_hint": "[timeframe] - e.g., 'last 30 days', 'this week'",
              "should_escape": false
          },
          {
              "command": "/trends",
              "description": "Analyze market trends",
              "usage_hint": "[category/keyword] - e.g., 'electronics', 'fitness'",
              "should_escape": false
          },
          {
              "command": "/validate",
              "description": "Validate product opportunity",
              "usage_hint": "[product idea] - e.g., 'ergonomic mouse pad'",
              "should_escape": false
          },
          {
              "command": "/dashboard",
              "description": "Create analytics dashboard",
              "usage_hint": "[type] - e.g., 'sales', 'products', 'keywords'",
              "should_escape": false
          }
      ]
  },
  "oauth_config": {
      "scopes": {
          "bot": [
              "channels:history",
              "channels:read",
              "chat:write",
              "chat:write.public",
              "commands",
              "files:write",
              "groups:history",
              "groups:read",
              "im:history",
              "im:read",
              "mpim:history",
              "mpim:read",
              "users:read",
              "reminders:write",
              "reminders:read",
              "chat:write.customize",
              "assistant:write"
          ]
      }
  },
  "settings": {
      "event_subscriptions": {
          "bot_events": [
              "app_home_opened",
              "message.channels",
              "assistant_thread_started",
              "assistant_thread_context_changed"
          ]
      },
      "interactivity": {
          "is_enabled": true
      },
      "org_deploy_enabled": false,
      "socket_mode_enabled": true,
      "token_rotation_enabled": false
  }
}